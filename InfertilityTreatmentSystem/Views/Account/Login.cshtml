@model InfertilityTreatmentSystem.Models.LoginViewModel

<div class="page-container">
    <header class="page-header">
        <div class="header-content">
            <span></span>
        </div>
    </header>

    <main class="main-wrapper">
        <div class="login-container">
            <div class="form-section">
                <h2>Login</h2>
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="form-group">
                        <input asp-for="Username" class="form-control" placeholder="User Name" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn-primary">Login</button>
                </form>

                <div class="links">
                    <a asp-action="ForgotPassword">Forgot Password?</a>
                    <a asp-action="Register">Sign Up</a>
                </div>

                <div class="social-buttons">
                    <button class="btn-danger">Sign in with Google (only Staff)</button>
                    <button class="btn-facebook">Sign in with Facebook</button>
                </div>
            </div>
        </div>
    </main>

</div>
</section>
<style>
    body {
        background: url('/images/20.jpg') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        height: 100vh;
    }
    .main-wrapper {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    .login-container {
        display: flex;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        max-width: 900px;
        width: 100%;
    }

    .image-section {
        flex: 1;
        background-color: transparent;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 100px;
    }

        .image-section img {
            max-width: 100%;
            height: auto;
        }

    .form-section {
        flex: 1;
        padding: 40px;
    }

        .form-section h2 {
            margin-bottom: 20px;
            color: #333;
        }

    .form-group input {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        color: white;
        cursor: pointer;
        font-weight: bold;
    }

    .links {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
        margin-top: 10px;
    }

    .social-buttons button {
        width: 100%;
        margin-top: 10px;
        padding: 10px;
        border: none;
        border-radius: 4px;
        color: white;
        cursor: pointer;
        font-weight: bold;
    }

    .btn-danger {
        background-color: #db4437;
    }

    .btn-facebook {
        background-color: #3b5998;
    }


    .login-form .form-control {
        background-color: #333;
        border: 1px solid #ccc;
        color: white;
    }

        .login-form .form-control::placeholder {
            color: #aaa;
        }

    .btn-block {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 4px;
    }

        .btn-block:hover {
            background-color: #45a049;
        }

    .login-section {
        background-color: rgba(43, 43, 43, 0.8); 
        color: #fff;
        padding: 50px 0;
    }

        .login-section h1 {
            color: #e9e9e9;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
